<main class="rd-app">
  <h3>flatpickr ready</h3>
  {{ember-flatpickr
    date=(readonly defaultDate)
    dateFormat='D/M/Y'
    placeholder='Choose a Date'
    defaultDate=this.defaultDate
    onChange=this.changa
    getFlatpickrRef=(action (mut flatpickrRef))
  }}
  <h3>Get Data</h3>
  <hr>
  <h3>PikaDay</h3>
  <label>
    1) Start date:
    <PikadayInput onSelection={{action 'doSomethingWithSelectedValue'}} placeholder="dscds" format="MM/DD/YYYY" />
  </label>
  <label>
   2) Start date:
    {{pikaday-input readonly="readonly"}}
  </label>

  {{#if this.turtle}}
    <span>The value i have passed in is: </span>
    {{else}}
    <button onclick={{action (mut this.turtle) "I'm a ninja"}}>Transform!!!</button>
  {{/if}}
  {{this.turtle}}
  <h3>This is a test application playing with EMBER OCTANE</h3>
  <FilterData @data={{this.itRdNews}} ...arguments  />
  <CreateRdNews
    @dateVal={{this.date}}
    @onChangeDate={{this.handleDate}}
    @titleVal={{this.title}}
    @onchangeTitle={{this.handleTitle}}
    @versionVal={{this.version}}
    @onChangeVersion={{this.handleVersion}}
  />
  <button onclick={{action this.refresh}}>Refresh</button>
<table class="main-table">
  <thead>
  <tr>
    <th>Date</th>
    <th>Title</th>
    <th>Version</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody class="mainbody">
    {{#each this.itRdNews as |v|}}
      <tr class="trbody">
        <td class="date">{{v.date}}</td>
        <td class="title">{{v.title}}</td>
        <td class="version">{{v.version}}</td>
        <td>
          <button onclick={{action this.generateModal v}}>Edit from Service</button>
          <section id="modalaki"></section>
          <EditAction @values={{v}} @act={{this.editModal}} ...arguments />
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<hr>
<div>
  Count: {{this.count}}
  stringArr: {{this.stringName}}
  <br/>
  <button {{on 'click' this.increment}}>Click to increase</button>
  <button {{on 'click' this.decrement}}>Click to decrease</button>
  <button {{on 'click' this.message}}>Add message</button>
</div>
<hr>
<div>
  <h3>You have Entered:</h3>
  <ul>
    <li>{{this.date}}</li>
    <li>{{this.title}}</li>
    <li>{{this.version}}</li>
  </ul>
</div>
<section>
  <div>
    <label for="">date</label>
    <input type="text" value={{this.date}} onchange={{this.handleDate}} >
  </div>
  <div>
    <label for="">title</label>
    <input type="text" value={{this.title}} onchange={{this.handleTitle}} >
  </div>
  <div>
    <label for="">version</label>
    <input type="text" value={{this.version}} onchange={{this.handleVersion}} >
  </div>
  <div>
    <button {{on 'click' this.submitForm}}>Submit</button>
  </div>
</section>
</main>
{{outlet}}
<hr>