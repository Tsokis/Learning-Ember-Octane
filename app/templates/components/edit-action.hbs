{{yield}}
<section class="modal-edit">
  {{#if this.toggleModal}}
    <div class="edit-modal">
      <div class="edit-modal-content">
        <button {{action this.closeModal}} class="btn-close">X</button>
        <h3 class="header-title">Edit Rd news</h3>
        <div class="form-group">
          <label for="date">Date</label><br>
          <input type="text" value={{@values.date}} >
        </div>
        <div class="form-group">
          <label for="title">Title</label><br>
          <input type="text" value={{@values.title}} >
        </div>
        <div class="form-group">
          <label for="version">Version</label><br>
          <textarea name="version" id="mversion" cols="30" rows="10">{{@values.version}}</textarea>
        </div>
        <div class="buttons">
          <button>Submit</button>
        </div>
      </div>
    </div>
  {{else}}
  <button onclick={{action this.toggler}} class="btn-primary">Edit Component</button>
  {{/if}}
</section>